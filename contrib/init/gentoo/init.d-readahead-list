depend() {
	before *
	# this is so that we can run before localmount
	# for more speedups
	[ "${SOFTLEVEL}" == "boot" ] || need localmount
}

start() {
	var="READAHEAD_LIST_runlevel_${SOFTLEVEL}"
	f="${!var}"
	ebegin "Performing readahead(2) for contents of ${f}"
	/sbin/readahead-list ${!runlevelfile}
	eend $?
}

stop() {
	# nothing to do
	:
}

# vim: ts=4 sw=4
